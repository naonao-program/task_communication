<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザーのタイプ %><br />
    <%= f.select :type, User.types.keys, {"---" => 0, "生徒" => 1, "先生" => 2}%>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, class:"input-default",id:"nickname", placeholder:"例) テスト太郎", maxlength:"40" %><br />
  </div>

  <div class="field">
    <%= f.label :学校名 %><br />
    <%= f.text_field :school_name, class:"input-default",id:"school_name", placeholder:"例) 〇〇大学", maxlength:"40" %><br />
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
